    ];
    rr:predicateObjectMap [
        rr:predicate roo:P100025;
        rr:objectMap [ 
            rr:parentTriplesMap map:clinT;
            rr:joinCondition [
                rr:child "id";
                rr:parent "id";
            ];
        ];
    ];
    rr:predicateObjectMap [
        rr:predicate roo:P100025;
        rr:objectMap [ 
            rr:parentTriplesMap map:clinN;
            rr:joinCondition [
                rr:child "id";
                rr:parent "id";
            ];
        ];
    ].

